@model IEnumerable<StudentManagementAPI.Models.Course>

<div class="container">
    <div class="text-center mb-4">
        <h2>Course List</h2>
    </div>


    <div class="row justify-content-center">
        <div class="col-md-8">
            <table class="table table-bordered table-hover table-light">
                <thead class="table-dark">
                    <tr>
                        <th>Course Code</th>
                        <th>Course Name</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var course in Model)
                    {
                        <tr>
                            <td>@course.CourseCode</td>
                            <td>@course.CourseName</td>
                            <td>
                                <a class="btn btn-warning btn-sm me-2" asp-action="Edit" asp-route-id="@course.CourseID">Edit</a>
                                <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@course.CourseID">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

            <!-- Add New Course Button -->
            <div class="text-center mt-4">
                <a class="btn btn-success" asp-action="Create">Add New Course</a>
            </div>
        </div>
    </div>
</div>
