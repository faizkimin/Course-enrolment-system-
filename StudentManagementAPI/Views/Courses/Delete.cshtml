@model StudentManagementAPI.Models.Course

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h2 class="text-center mb-4 text-danger">Delete Course</h2>
            <h4 class="text-center mb-3">Are you sure you want to delete this course?</h4>

            <div class="p-4 border rounded shadow-sm bg-light">
                <dl class="row">
                    <dt class="col-sm-4 text-end">
                        <strong>Course Code:</strong>
                    </dt>
                    <dd class="col-sm-8">
                        @Model.CourseCode
                    </dd>
                    <dt class="col-sm-4 text-end">
                        <strong>Course Name:</strong>
                    </dt>
                    <dd class="col-sm-8">
                        @Model.CourseName
                    </dd>
                </dl>

                <form asp-action="Delete" method="post" class="mt-4">
                    <input type="hidden" asp-for="CourseID" />
                    <div class="text-center">
                        <button type="submit" class="btn btn-danger px-4">Delete</button>
                        <a asp-action="Index" class="btn btn-secondary px-4">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>