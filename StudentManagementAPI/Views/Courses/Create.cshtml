@model StudentManagementAPI.Models.Course

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h2 class="text-center mb-4 text-primary">Add New Subject</h2>
            <h4 class="text-center mb-3">Please provide the course details below:</h4>

            <div class="p-4 border rounded shadow-sm bg-light">
                <form asp-action="Create" method="post">
                    <div class="form-group mb-3">
                        <label asp-for="CourseCode" class="control-label"><strong>Course Code:</strong></label>
                        <input asp-for="CourseCode" class="form-control" placeholder="Enter Course Code" />
                        <span asp-validation-for="CourseCode" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="CourseName" class="control-label"><strong>Course Name:</strong></label>
                        <input asp-for="CourseName" class="form-control" placeholder="Enter Course Name" />
                        <span asp-validation-for="CourseName" class="text-danger"></span>
                    </div>

                    <div class="text-center mt-4">
                        <button type="submit" class="btn btn-success px-4">Create</button>
                        <a asp-action="Index" class="btn btn-secondary px-4">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
