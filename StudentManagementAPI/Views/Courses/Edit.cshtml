@model StudentManagementAPI.Models.Course

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Course</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #f8f9fa;
            margin: 0;
            padding: 0;
        }

        .container {
            max-width: 600px;
            margin: 50px auto;
            padding: 30px;
            background-color: #ffffff;
            border-radius: 10px;
            box-shadow: 0 6px 15px rgba(0, 0, 0, 0.1);
        }

        h2 {
            color: #343a40;
            font-size: 24px;
            text-align: center;
            margin-bottom: 20px;
        }

        .form-group label {
            font-weight: 500;
            color: #495057;
        }

        .form-group input {
            padding: 10px;
            font-size: 16px;
        }

        .btn {
            padding: 10px 20px;
            font-size: 16px;
            border-radius: 6px; /* Smooth edge with slightly rounded corners */
            text-decoration: none;
            transition: background-color 0.3s ease, transform 0.2s ease;
            border: none;
        }

        .btn-primary {
            background-color: #007bff;
            color: #ffffff;
        }

            .btn-primary:hover {
                background-color: #0056b3;
                transform: translateY(-2px); /* Subtle hover effect */
            }

        .btn-secondary {
            background-color: #6c757d;
            color: #ffffff;
        }

            .btn-secondary:hover {
                background-color: #5a6268;
                transform: translateY(-2px); /* Subtle hover effect */
            }

        .text-danger {
            font-size: 14px;
        }

        .text-center {
            margin-top: 30px;
        }
    </style>
</head>
<body>

    <div class="container">
        <h2>Edit Course</h2>

        <form asp-action="Edit" method="post">
            <!-- Hidden field to store CourseID -->
            <input type="hidden" asp-for="CourseID" />

            <!-- Course Code Field -->
            <div class="form-group mb-3">
                <label asp-for="CourseCode" class="form-label">Course Code</label>
                <input asp-for="CourseCode" class="form-control" />
                <span asp-validation-for="CourseCode" class="text-danger"></span>
            </div>

            <!-- Course Name Field -->
            <div class="form-group mb-3">
                <label asp-for="CourseName" class="form-label">Course Name</label>
                <input asp-for="CourseName" class="form-control" />
                <span asp-validation-for="CourseName" class="text-danger"></span>
            </div>

            <!-- Action Buttons -->
            <div class="text-center">
                <button type="submit" class="btn btn-primary">Save</button>
                <a asp-action="Index" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>

</body>
</html>
