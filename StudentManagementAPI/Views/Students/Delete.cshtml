@model StudentManagementAPI.Models.Student

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h2 class="text-center mb-4 text-danger">Delete Student</h2>
            <h4 class="text-center mb-3">Are you sure you want to delete this student?</h4>

            <div class="p-4 border rounded shadow-sm bg-light">
                <dl class="row">
                    <dt class="col-sm-4 text-end">
                        <strong>Student Number:</strong>
                    </dt>
                    <dd class="col-sm-8">
                        @Model.StudentNo
                    </dd>
                    <dt class="col-sm-4 text-end">
                        <strong>Student Name:</strong>
                    </dt>
                    <dd class="col-sm-8">
                        @Model.StudentName
                    </dd>
                    <dt class="col-sm-4 text-end">
                        <strong>Student Email:</strong>
                    </dt>
                    <dd class="col-sm-8">
                        @Model.StudentEmail
                    </dd>
                    <dt class="col-sm-4 text-end">
                        <strong>Contact Number:</strong>
                    </dt>
                    <dd class="col-sm-8">
                        @Model.StudentContactNumber
                    </dd>
                    <dt class="col-sm-4 text-end">
                        <strong>Enrollment Date:</strong>
                    </dt>
                    <dd class="col-sm-8">
                        @Model.StudentEnrollmentDate.ToShortDateString()
                    </dd>
                </dl>

                <form asp-action="Delete" method="post" class="mt-4">
                    <input type="hidden" asp-for="StudentID" />
                    <div class="text-center">
                        <button type="submit" class="btn btn-danger px-4">Delete</button>
                        <a asp-action="Index" class="btn btn-secondary px-4">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>