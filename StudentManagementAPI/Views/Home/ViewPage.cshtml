@{
    ViewData["Title"] = "Course Report";
}

<div id="dashboard-container" class="container my-5">
    <div class="text-center mb-4">
        <h1 class="display-6">Course Overview</h1>
        <p class="text-muted">A comprehensive list of available courses</p>
    </div>

    <div class="card shadow-sm">
        <div class="card-body p-0">
            <table class="table table-striped table-hover mb-0">
                <thead class="bg-dark text-white">
                    <tr>
                        <th>#</th>
                        <th>Course Code</th>
                        <th>Course Name</th>
                    </tr>
                </thead>
                <tbody id="course-list">
                    <!-- Dynamic rows will be appended here -->
                </tbody>
            </table>
        </div>
    </div>

    <div class="d-flex justify-content-center align-items-center mt-4">
        <a href="/" class="btn btn-outline-secondary me-2">
            <i class="bi bi-arrow-left-circle"></i> Back
        </a>
        <button onclick="window.print()" class="btn btn-primary">
            <i class="bi bi-printer"></i> Print Report
        </button>
    </div>
</div>

<!-- Scripts -->
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
<script>
    // Function to fetch and render courses
    function fetchCourses() {
        $.ajax({
            url: "/Courses/GetCourses",
            method: "GET",
            success: function (data) {
                const courseList = $("#course-list");
                courseList.empty();

                data.forEach((course, index) => {
                    courseList.append(`
                        <tr>
                            <td>${index + 1}</td>
                            <td>${course.courseCode}</td>
                            <td>${course.courseName}</td>
                        </tr>
                    `);
                });
            },
            error: function () {
                alert("Failed to fetch course data.");
            }
        });
    }

    // Initial fetch
    $(document).ready(function () {
        fetchCourses();

        // Auto-refresh every 10 seconds
        setInterval(fetchCourses, 10000);
    });
</script>

<!-- Optional custom styles -->
<style>
    #dashboard-container {
        max-width: 900px;
        margin: auto;
    }

    table thead {
        position: sticky;
        top: 0;
        z-index: 1;
    }

   
</style>
